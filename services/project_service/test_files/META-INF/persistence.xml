<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
  <persistence-unit name="HibernateProjectPersistence" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <properties>
    <property name="hibernate.ejb.cfgfile" value = "META-INF/hibernate.cfg.xml"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.InformixDialect" />
      <property name="transaction.factory_class" value="org.hibernate.ejb.transaction.JoinableCMTTransactionFactory" />
      <property name="transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup" />
      <property name="jboss.entity.manager.jndi.name" value="document_manager" />
    </properties>
  </persistence-unit>
</persistence>
